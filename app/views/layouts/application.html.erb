<!DOCTYPE html>
<html>
  <head>
    <title>Meal share app</title>

    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
   <div class="d-flex flex-column flex-md-row align-items-center p-3 px-md-4 mb-3 bg-white border-bottom shadow-sm">
    <h5 class="my-0 mr-md-auto font-weight-normal">Meal share app</h5>
    <nav class="my-2 my-md-0 mr-md-3">

    <%if user_signed_in? %>
      <%= link_to "Log out", destroy_user_session_path, :method => :delete %>
      <%= link_to "My page", user_path(current_user.id) %>
      <a class="btn btn-outline-primary" href="/users/">Users</a>
      <a class="btn btn-outline-primary" href="/logs/">Logs</a>
    <% end %>
    </nav>

  </div>

    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
    <%= yield %>
  </body>
</html>
