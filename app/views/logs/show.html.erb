<div class="container">
<h1>投稿詳細ページ</h1>
<tr>
    <div class="my-3 ml-3">
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>User</th>
                    <th>brealfast</th>
                    <th>lunch</th>
                    <th>dinner</th>
                    <th>Likecount</th>
                    <th>Comment</th>
                </tr>
            </thead>
            <tbody>
                    <tr>
                        <td><%= @log.user.name %></td>
                        <td><%= @log.brealfast %></td>
                        <td><%= @log.lunch %></td>
                        <td><%= @log.dinner %></td>
                        <td><%= @log.likes.count %></td>
                        <td><%= @log.comment %></td>
                    </tr>
            </tbody>
        </table>
    </div>
</tr>

<% if current_user.already_liked?(@log) %>
    <h3>Like: <%= @log.likes.count %></h3>
    
    <%= button_to 'Cancel', log_like_path(@log), method: :delete %>
<% else %>
    
    <%= button_to 'Like', log_likes_path(@log) %>

<% end %>

<h3>Likeしたユーザー</h3>
<% @log.liked_users.each do |user| %>
  <li><%= user.name %></li>
<% end %>

<%= link_to "Back", logs_path %>

</div>

